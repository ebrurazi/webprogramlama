@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<div class="index-page">
    <h2>Welcome to the Home Page</h2>
    <div class="navigation-buttons">
        <a class="btn btn-primary" asp-page="/Login">Giriş Yap</a>
        <a class="btn btn-secondary" asp-page="/Register">Kayıt Ol</a>
    </div>

    <div class="product-grid">
        <!-- Hardcoded Products -->
        <div class="product">
            <img src="~/img/urun1.jpg" alt="Ürün 1">
            <h3>Ürün 1</h3>
            <p>₺100.00</p>
            <button class="add-to-cart">Sepete Ekle</button>
        </div>
        <div class="product">
            <img src="~/img/urun2.jpg" alt="Ürün 2">
            <h3>Ürün 2</h3>
            <p>₺150.00</p>
            <button class="add-to-cart">Sepete Ekle</button>
        </div>
        <div class="product">
            <img src="~/img/urun3.jpg" alt="Ürün 3">
            <h3>Ürün 3</h3>
            <p>₺200.00</p>
            <button class="add-to-cart">Sepete Ekle</button>
        </div>
        <div class="product">
            <img src="~/img/urun4.jpg" alt="Ürün 4">
            <h3>Ürün 4</h3>
            <p>₺250.00</p>
            <button class="add-to-cart">Sepete Ekle</button>
        </div>
        <div class="product">
            <img src="~/img/urun5.jpg" alt="Ürün 5">
            <h3>Ürün 5</h3>
            <p>₺200.00</p>
            <button class="add-to-cart">Sepete Ekle</button>
        </div>
        <div class="product">
            <img src="~/img/urun6.jpg" alt="Ürün 6">
            <h3>Ürün 6</h3>
            <p>₺200.00</p>
            <button class="add-to-cart">Sepete Ekle</button>
        </div>

        <!-- Dynamic Products from Database -->
        @foreach (var product in Model.Products)
        {
            <div class="product">
                <img src="@product.ImageUrl" alt="@product.Name">
                <h3>@product.Name</h3>
                <p>₺@product.Price</p>
                <button class="add-to-cart">Sepete Ekle</button>
            </div>
        }
    </div>
</div>
