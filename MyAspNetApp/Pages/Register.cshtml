@model MyAspNetApp.Models.RegisterModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="username">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="username" name="username" asp-for="Username" required>
    </div>
    <div class="form-group">
        <label for="password">Şifre</label>
        <input type="password" class="form-control" id="password" name="password" asp-for="Password" required>
    </div>
    <div class="form-group">
        <label for="firstName">İsim</label>
        <input type="text" class="form-control" id="firstName" name="firstName" asp-for="FirstName" required>
    </div>
    <div class="form-group">
        <label for="lastName">Soyisim</label>
        <input type="text" class="form-control" id="lastName" name="lastName" asp-for="LastName" required>
    </div>
    <div class="form-group">
        <label for="birthDate">Doğum Tarihi</label>
        <input type="date" class="form-control" id="birthDate" name="birthDate" asp-for="BirthDate" required>
    </div>
    <div class="form-group">
        <label for="role">Rol Seçimi</label>
        <select class="form-control" id="role" name="role" asp-for="Role" required>
            <option value="User">Kullanıcı</option>
            <option value="Seller">Satıcı</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydol</button>
</form>
